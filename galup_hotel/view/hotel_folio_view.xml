<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>         


        <record model="ir.ui.view" id="view_hotel_folio1_form_inherit">
            <field name='name'>hotel.folio.form</field>
            <field name="inherit_id" ref="hotel.view_hotel_folio1_form"/>
            <field name="model">hotel.folio</field>
            <field name="arch" type="xml">                    
                <notebook position="inside">
                    <page string="Huespedes">
                        <field name="guest_lines">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="last_name"/>
                                <field name="identification_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <xpath expr="//field[@name='room_lines']/form/notebook/page/group/field[@name='discount']" position="before">
                    <field name="discount_id" />
                </xpath>
                <field name="invoice_status" position='after'>
                    <field name="early_checkin" attrs="{'readonly':[('check_applied','!=',False)]}"/>
                    <field name="early_checkin_hour" attrs="{'invisible':[('early_checkin','=',False)],'required':[('early_checkin','!=',False)],'readonly':['|',('state','!=','draft'),('check_applied','!=',False)]}" />
                    <field name="late_checkout" attrs="{'readonly':[('check_applied','!=',False)]}" />
                    <field name="late_checkout_hour" attrs="{'invisible':[('late_checkout','=',False)],'required':[('late_checkout','!=',False)], 'readonly':['|',('state','!=','draft'),('check_applied','!=',False)]}" />
                    <field name="check_applied" invisible="True"/>
                </field>
                <xpath expr="//button[@name='action_done']" position="after">
                    <button name="calculate_check" attrs="{'invisible':['|',('check_applied','!=',False),('state','!=','draft')]}" string="Calcular Early Checkin/Late Checkout" type="object" />
                    <button name="uncalculate_check" attrs="{'invisible':['|',('check_applied','=',False),('state','!=','draft')]}" string="Eliminar Early Checkin/Late Checkout" type="object" />
                </xpath>


            </field>
        </record>



    </data>
</odoo>